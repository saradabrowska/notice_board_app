{% extends 'layout.html.twig' %}

{% block title %}{{ 'title.offer_delete'|trans({'%id%': offer.id}) }}{% endblock %}

{% block body %}
<h1>{{ 'title.offer_delete'|trans({'%id%': offer.id}) }}</h1>
{{ form_start(form, { method: 'post', action: url('offer_delete', {'id': offer.id}) }) }}
{{ form_widget(form) }}
<input type="submit" value="{{ 'action.delete'|trans }}" class="btn btn-success" />
{{ form_end(form) }}
<a href="{{ url('offer_index') }}" title="{{ 'label.back_to_list'|trans }}" class="btn btn-default">
    <span class="fa fa-mail-reply" aria-hidden="true"></span>
    {{ 'label.back_to_list'|trans }}
</a>
{% endblock %}