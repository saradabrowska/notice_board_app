{% extends 'layout.html.twig' %}

{% block title %}{{ 'title.offer_add'|trans }}{% endblock %}

{% block body %}
    <h1>{{ 'title.offer_add'|trans }}</h1>
    {{ form_start(form, { method: 'post', action: url('offer_add') }) }}
    {{ form_widget(form) }}
    <input type="submit" value="{{ 'action.save'|trans }}" class="btn btn-success" />
    {{ form_end(form) }}
    <a href="{{ url('offer_index') }}" title="{{ 'label.back_to_list'|trans }}" class="btn btn-default">
        <span class="fa fa-mail-reply" aria-hidden="true"></span>
        {{ 'label.back_to_list'|trans }}
    </a>
{% endblock %}